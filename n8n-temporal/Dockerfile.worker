FROM oven/bun:1-alpine

WORKDIR /app

# Copy package files
COPY package.json bun.lockb* ./

# Install dependencies
RUN bun install --frozen-lockfile

# Copy source code
COPY src ./src
COPY tsconfig.json ./

# Build TypeScript
RUN bun build src/worker.ts --outdir ./dist --target bun

# Run the worker
CMD ["bun", "run", "src/worker.ts"]
